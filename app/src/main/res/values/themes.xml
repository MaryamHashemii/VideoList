<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VideoList" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>



        <item name="textAppearanceHeadline1">@style/TextAppearance.VideoList.Headline1</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.VideoList.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.VideoList.Body1</item>
        <item name="textAppearanceButton">@style/TextAppearance.VideoList.Button</item>

    </style>


</resources>